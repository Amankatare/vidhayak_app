@using VidhayakApp.Web.Controllers
@model AccountController

@{
    var userRoleId = ViewData["UserRoleId"] as int?;
}


@functions {
    string GetProfileLink(int userRoleId)
    {
        switch (userRoleId)
        {
            case 1:
                return Url.Action("Profile", "SuperAdmin");
            case 2:
                return Url.Action("Profile", "Admin");
            case 3:
                return Url.Action("Profile", "AppUser");
            case 4:
                return Url.Action("Profile", "User");
            default:
                return "#";
        }
    }
}


